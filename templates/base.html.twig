<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>        
        <link rel="icon" href="{{ asset("uploads/logo/ars-favicon.png") }}" type="image/png" sizes="16*16">        
        {% block stylesheets %}
        <link rel="stylesheet"  href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"/>
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" integrity="sha256-kLaT2GOSpHechhsozzB+flnD+zUyjE2LlfWPgU04xyI="
        crossorigin=""/>
        <link rel="stylesheet" type="text/css" href="{{ asset("css/app.css") }}">            
        {% endblock %}

        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js" integrity="sha256-WBkoXOwTeyKclOHuWtc+i2uENFpDZ9YPdf5Hf+D7ewM="
        crossorigin=""></script>
        <script type="text/javascript" src="{{ asset('js/map.js') }}" defer></script>
        {% endblock %}
        <style>
            .alert{
                padding:10px;
                color:white;
                text-align:center;
                margin:0;
                border:none;
                border-radius:0;
            }

            .alert-success{
                background-color:green;
            }

            .alert-error{
                background-color:red;
            }

            .alert-info{
                background-color:blue;
            }
        </style>
    </head>
    <body>
        {{include('header/header.html.twig')}}
        {{include('home/_flash_messages.html.twig')}}
        {% block body %}
        {% endblock %}
        {{include('footer/footer.html.twig')}}
    </body>
</html>
