{% extends 'users.html.twig' %}

{% block title %}Profil de {{app.user.coach.name}}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {# colonne du photo#}
        <div class="col-md-4 mt-1">
            <div class="card bg-dark text-center sidebar">
                <div class="card-body">
                    <img src="{{ asset('/uploads/coaches/'~app.user.coach.image)}}" class="rounded-circle" alt="{{app.user.coach.name}}" width="200">
                    <div class="mt-3">
                        <h3>Mon profil</h3>
                    </div>
                </div> 
            </div> 
        </div>
        {# colonne des infos#}
        <div class="col-md-8 mt-1">
            <div class="card mb-3 content">
                <h1>Profil de {{app.user.coach.name}} </h1>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h3>Full name</h3>
                        </div>
                        <div class="col-md-9 ">
                            {{app.user.coach.name}}
                        </div>
                    </div>    
                                  
                    <div class="row">
                        <div class="col-md-3">
                            <h3>Email</h3>
                        </div>
                        <div class="col-md-9 ">
                            {{app.user.email}}
                        </div>
                    </div>
                    <div class="btn-group">                        
                        <button type="button" class="btn btn-sm btn-outline-secondary"><a href={{path('users_edit_profile')}}>Modifier mon profil</a></button>
                        <button type="button" class="btn btn-sm btn-outline-secondary"><a href={{path('users_edit_password')}}>Modifier mon mot de passe</a></button>
                    </div>
                    <hr>
                </div>
            </div>
            <div class="card mb-3 content">
                <h1>Les formations de {{app.user.coach.name}} ({{app.user.coach.trainings|length}})</h1>
                <div class="card-body">
                    {% for training in app.user.coach.trainings %}
                    <div class="row">
                        <div class="col-md-3">
                            <h3>Formation: </h3>
                        </div>
                        <div class="col-md-9 ">
                            <a href={{path('show_training', {id:training.id})}}>{{training.name}}</a>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div> 
    </div>    
</div>
{% endblock %}
