{% extends 'users.html.twig' %}

{% block title %}Profil de {{app.user.customer.name}}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {# colonne du photo#}
        <div class="col-md-4 mt-1">
            <div class="card bg-dark text-center sidebar">
                <div class="card-body">
                    <img src="{{ asset('/uploads/customers/'~app.user.customer.image)}}" class="rounded-circle" alt="{{app.user.customer.name}}" width="200">
                    <div class="mt-3">
                        <h3>{{app.user.customer.name}}'s profile </h3>
                    </div>
                </div> 
            </div> 
        </div>
        {# colonne des infos#}
        <div class="col-md-8 mt-1">
            <div class="card mb-3 content">
                <h1>{{app.user.customer.name}}'s profile </h1>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h3>Full name</h3>
                        </div>
                        <div class="col-md-9 ">
                            {{app.user.customer.name}}
                        </div>
                    </div>    
                                  
                    <div class="row">
                        <div class="col-md-3">
                            <h3>Email</h3>
                        </div>
                        <div class="col-md-9 ">
                            {{app.user.email}}
                        </div>
                    </div>
                    <div class="btn-group">                        
                        <button type="button" class="btn btn-sm btn-outline-secondary"><a class="text-decoration-none" href={{path('users_edit_profile')}}>Edit my profile</a></button>
                        <button type="button" class="btn btn-sm btn-outline-secondary"><a class="text-decoration-none" href={{path('users_edit_password')}}>Edit my password</a></button>
                    </div>
                    <hr>
                </div>
            </div>            
        </div> 
    </div>    
</div>
{% endblock %}
