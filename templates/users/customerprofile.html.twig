{% extends 'users.html.twig' %}

{% block title %}{% trans %}profile of{% endtrans %} {{app.user.customer.name}} {% endblock %}

{% block body %}
<div class="container">
    <div class="row">      
        <div class="col-md-4 my-5">
            <div class="card bg-dark text-center sidebar">
                <div class="card-body">
                    <img src="{{ asset('/uploads/customers/'~app.user.customer.image)}}" class="rounded-circle" alt="{{app.user.customer.name}}" width="200">
                    <div class="mt-3">
                        <h3>{% trans %}Profile of {% endtrans %} {{app.user.customer.name}}  </h3>
                    </div>
                </div> 
            </div> 
        </div>      
        <div class="col-md-8 my-5">
            <div class="card mb-3 content">
                <h1>{% trans %}Profile of {% endtrans %} {{app.user.customer.name}}</h1>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <h3>{% trans %}Full name{% endtrans %}</h3>
                        </div>
                        <div class="col-md-9 ">
                            {{app.user.customer.name}}
                        </div>
                    </div>                                    
                    <div class="row">
                        <div class="col-md-3">
                            <h3>{% trans %}Email{% endtrans %}</h3>
                        </div>
                        <div class="col-md-9 ">
                            {{app.user.email}}
                        </div>
                    </div>
                    <div class="btn-group">                        
                        <button type="button" class="btn btn-primary btn-sm btn-outline-secondary"><a class="text-decoration-none text-white" href={{path('users_edit_password')}}>{% trans %}Edit my password{% endtrans %}</a></button>
                        <button type="button" class="btn btn-primary btn-sm btn-outline-secondary ms-3"><a class="text-decoration-none text-white"href={{path('users_edit_profile')}}>{% trans %}Edit my profile{% endtrans %}</a></button>
                    </div>
                    <hr>
                </div>
            </div>
            {% if is_granted('ROLE_CUSTOMER') %}                
                <div class="card mb-3 content">
                    {#<h1>The training courses of {{app.user.customer.name}}</h1>#}
                    <div class="card-body">                    
                        <div class="row">                        
                            <div class="col-md-9 ">
                               {# <a class="tet-decoration-none " >Info</a>#}
                            </div>
                        </div>                        
                    </div>                    
                </div> 
            {% else %}
                <h1>Je ne suis pas encore client</h1>
            {% endif %}                       
        </div> 
    </div>    
</div>
{% endblock %}
