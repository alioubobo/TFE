{% extends 'users.html.twig' %}

{% block title %}{% trans %}Edit Password{% endtrans %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 mt-1">
                <div class="card bg-dark text-center sidebar">
                    <div class="card-body">
                        <img src="{{ asset('/uploads/coaches/'~app.user.coach.image)}}" class="rounded-circle" alt="{{app.user.coach.name}}" width="200">
                        <div class="mt-3">
                            <h3>{% trans %}My profile{% endtrans %}</h3>
                        </div>    
                    </div>
                </div> 
            </div> 
            <div class="col-md-8 mt-1">
                <div class="card mb-3 content">
                    <h1>{% trans %}Edit Password {% endtrans %}{{app.user.coach.name}} </h1>
                    <div class="card-body">
                        <div class="row">
                            <form class="" action="" method="Post">
                                <div class="row">
                                    <div class="form-group ">
                                        <label for="pass">{% trans %}Password{% endtrans %}</label>
                                        <input type="password" id="pass" name="pass" class="form-control"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group ">
                                        <label for="pass2">{% trans %}confirm password{% endtrans %}</label>
                                        <input type="password" id="pass2" name="pass2" class="form-control"/>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-sm btn-outline-secondary text-white">Confirm</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}