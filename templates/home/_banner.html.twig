<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" data-interval="3000">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="uploads/images/chemin-bonheur.jpg" class="d-block w-100" alt="image de la bannière-chemin-bonheur" height="550px">
      <div class="carousel-caption "><h1 class="img1">{% trans %}Getting to know yourself{% endtrans %}</h1></div>
    </div>
    <div class="carousel-item">
      <img src="uploads/images/meditation.jpg" class="d-block w-100" alt="image de la bannière-meditation" height="550px">
      <div class="carousel-caption"><h1 class="img2">{% trans %}Meditation helps you to focus on yourself{% endtrans %}</h1></div>
    </div>
    <div class="carousel-item">
      <img src="uploads/images/lumiere.jpg" class="d-block w-100" alt="image de la bannière-lumière" height="550px">
      <div class="carousel-caption"><h1 class="img3">{% trans %}The light at the end of the tunnel{% endtrans %}</h1></div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">{% trans %}Previous{% endtrans %}</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">{% trans %}Next{% endtrans %}</span>
  </button>
</div>